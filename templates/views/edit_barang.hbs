{{>header}}
<body>
<div id="app">
    <div class="main-wrapper">
        {{>navbar}}
        <!-- Main Content -->
        <div class="main-content">
            <section class="section">
                <div class="section-header">
                    <h1>Edit Barang</h1>
                </div>
                <div class="section-body">
                    <form method="post" action="/barang/edit/{{barang._id}}">
                        <input type="hidden" name="_method" value="PATCH">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="judul_barang" >Nama Barang</label>
                                <input value="{{barang.judul_barang}}" name="judul_barang" id="judul_barang" type="text" class="form-control">
                            </div>

                            <div class="form-group">
                                <label for="jumlah_barang">Jumlah Barang</label>
                                <input value="{{barang.jumlah_barang}}" id="jumlah_barang" name="jumlah_barang" type="number" class="form-control">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Tambah</button>
                    </form>
                </div>
            </section>
        </div>
        <footer class="main-footer">
            Footer
        </footer>
    </div>
</div>
</body>

