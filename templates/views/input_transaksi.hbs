{{>header}}
<body>
<div id="app">
    <div class="main-wrapper">
        {{>navbar}}

        <!-- Main Content -->
        <div class="main-content">
            <section class="section">
                <div class="section-header">
                    <h1>Buat Transaksi Baru</h1>
                </div>
                <div class="section-body">

                    <form method="post" action="/transaksi/baru/{{barang._id}}">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Nama Peminjam</label>
                                <input type="text" value="{{nama_peminjam}}" disabled class="form-control">
                            </div>

                            <div class="form-group">
                                <label>Nama Barang</label>
                                <input type="text" value="{{barang.judul_barang}}" disabled class="form-control">
                            </div>

                            <div class="form-group">
                                <label>Jumlah Barang Yang Dipinjam</label>
                                <input name="jumlah_barang" type="number" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary">Tambah</button>
                        </div>
                    </form>
                </div>
            </section>
        </div>
        <footer class="main-footer">
            Footer
        </footer>
    </div>
</div>
</body>
{{>footer}}