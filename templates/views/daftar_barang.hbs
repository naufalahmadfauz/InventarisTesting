{{>header}}
<body>
<div id="app">
    <div class="main-wrapper">
        {{>navbar}}

        <!-- Main Content -->
        <div class="main-content">
            <section class="section">
                <div class="section-header">
                    <h1>Daftar Barang</h1>
                </div>

                <div class="section-body">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-md">
                                <tr>
                                    <th>ID Barang</th>
                                    <th>Nama Barang</th>
                                    <th>Stok</th>
                                    <th>Aksi</th>
                                </tr>
                                {{#each barang}}
                                    <tr>
                                        <td> {{this._id}}</td>
                                        <td> {{this.judul_barang}}</td>
                                        <td>
                                            <div class="badge badge-success">{{this.jumlah_barang}}</div>
                                        </td>
                                        <td>
                                        <td><a href="/barang/edit/{{this._id}}" class="btn btn-warning">Edit</a>
                                            <form action="/barang/hapus/{{this._id}}" method="post">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                            <a href="/transaksi/baru/{{this._id}}" class="btn btn-info">Pinjam</a>
                                        </td>
                                    </tr>
                                {{/each}}
                            </table>
                        </div>
                    </div>
                    <a href="/barang/baru/" class="btn btn-info">Tambah Barang</a>
                    <div class="card-footer text-right">
                        <nav class="d-inline-block">
                            <ul class="pagination mb-0">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1"><i class="fas fa-chevron-left"></i></a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1 <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">2</a>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#"><i class="fas fa-chevron-right"></i></a>
                                </li>
                            </ul>
                        </nav>
                    </div>


                </div>
            </section>
        </div>
        <footer class="main-footer">
            Footer
        </footer>
    </div>
</div>
</body>

